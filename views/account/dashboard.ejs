<%-include("../partials/header") %>
<%-include("../partials/flash") %>

<body>
  <div class="profile-container">
  	<div class="innerwrap">
  		<section class="section1 clearfix">
  			<div>
  				<div class="row grid clearfix">
  					<div class="col2 first">
              <% if (oneUser.length === 1) { %>

                  <% oneUser.forEach((oneUser, index) => { %>
                    <img src="/uploads/<%= oneUser.image %>" alt="">
                    <a class="editbtn" href="/edit-userInfo/<%= user._id %>">Edit</a>
                  <% }); %>

              <% } else { %>
                <img src="images/logo.png" alt="">
                <a class="editbtn" href="/edit-userInfo/<%= user._id %>">Edit</a>
              <% } %>

  						<h1> <%= user.fname %> <%= user.lname %></h1>
  						<p> <strong> <h4>Bios:</h4> </strong> <%= user.bios %> </p>
  					</div>
  					<div class="col2 last">
  						<div class="grid clearfix">
  							<div class="col3 first">
  								<h1><%= allBlogs %></h1>
  								<span>All Blogs</span>
  							</div>
  							<div class="col3"><h1><%= allReviews %></h1>
  							<span>All Reviews</span></div>
  							<div class="col3 last"><h1><%= myBlogs %></h1>
  							<span>My Blogs</span></div>
  						</div>
  					</div>
  				</div>
  				<div class="row clearfix">
  					<ul class="row2tab clearfix">
  						<li class="tab-header active" onclick="showTab(0)"><i class="fa fa-list-alt"></i> All Posts </li>
  						<li class="tab-header" onclick="showTab(1)"><i class="fa fa-heart"></i> All Reviews </li>
  						<li class="tab-header" onclick="showTab(2)"><i class="fa fa-check"></i> My posts </li>
  						<li class="tab-header" onclick="showTab(3)"><i class="fa fa-thumbs-o-up "></i> Create New Post </li>
  					</ul>
  				</div>
  			</div>
  			<span class="smalltri">

  			<i class="fa fa-star"></i>
  			</span>
  		</section>

  	</div>
  </div>


<div class="tabs">

<div class="tab-content active">
 <%-include("../blogPost/index-home") %>
</div>

<div class="tab-content">
  <h1 style="color: #cd7700;">Reviews from our clients</h1>

  <div class="row">

  <% review.forEach((review, index) => { %>
      <div class="column2">
        <div class="block" data-rotate-y="180deg" data-move-z="-200px" data-move-x="-300px" data-aos="fade-left" data-aos-duration="1100">
        <img id="review-img" src="/uploads/<%= review.image %>" alt="Blog Image" width="100" height="100" alt="">

          <div class="review-text">
            <h4 id="review-title"><%= review.username %></h4>
            <span style="color: white;"><%= review.title %></span>
          </div>

        <p id="serv1"><%= review.review?.slice(0, 130) %>.... <a href="/morereview/<%= review._id %>">Read More</a></p>
      </div>
      </div>
       <% }); %>

      </div>

  <a class="btn" href="/create-review">Rate us</a>

</div>



<div class="tab-content">
  <%-include("../blogPost/index-owner") %>
</div>


<div style="margin-top: -50px" class="tab-content">

  <div id="contact" class="container">
    <div class="create">
      <span>Create Blog Here</span>
    </div>
    <div class="row">
      <form action="/create-blog" method="POST" enctype="multipart/form-data" autocomplete="off" method="post">
      <div class="column" data-aos="zoom-in-left" data-aos-delay="180">
        <input id="uploadsheet" type="file" name="image" accept="image/*" required>
      </div>
      <div class="column" data-aos="zoom-in-right" data-aos-delay="250">
          <label class="contact1" for="email">Blog Title</label>
          <input required="true" autocomplete="false" class="contact2" maxlength="50" type="text" id="email" name="title" placeholder="Your title..">
          <label class="contact1" for="subject">Content</label>
          <textarea required="true" autocomplete="false" id="subject" name="content" placeholder="Write something.." style="height:170px"></textarea>
          <input type="submit" value="Submit">
        </form>
      </div>
    </div>
  </div>
  <!-- contact -->

</div>

</div>

<%-include("../partials/footer") %>
